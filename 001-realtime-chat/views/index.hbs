<div id="app">
    <header>
        <h1>Chat</h1>
    </header>
    <main>
        <div class="messages" v-if="messages.length > 0">
            <div v-for="message in messages"
                :class="{'message-sent': message.sent, 'message-received': !message.sent, 'message': true}">
                <div>
                    <p>\{{message.content}}</p>
                </div>
                <p class="author">\{{message.author}} â€” \{{message.date}}</p>
            </div>
        </div>
    </main>
    <footer>
        <input-message :state="connected"></input-message>
    </footer>
</div>
<template>
    <input type="text" @keyup.enter.prevent="send" :placeholder="placeholder" v-model="value">
</template>